{
  "name": "pos-system",
  "version": "1.0.0",
  "description": "Comprehensive POS System with Inventory, Sales, HRIS, and Cloud Integration",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "install-all": "npm install && cd client && npm install",
    "seed": "node server/scripts/seedDatabase.js",
    "seed:reset": "node server/scripts/seedDatabase.js"
  },
  "keywords": ["pos", "point-of-sale", "inventory", "sales", "hris", "retail"],
  "author": "Shopify Dev Guy",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.40.0",
    "nodemailer": "^6.9.4",
    "moment": "^2.29.4",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  }
}
